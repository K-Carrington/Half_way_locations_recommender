<div class="page-header">
  <h1>Hey <%= user.local.first_name || user.facebook.first_name %>!</h1>
</div>

<div class="row">

  <div class="col-sm-2 col-sm-offset-1"><br><br>
    <a href="/profile">Profile</a><br><br>
    <a href="/locations">Saved Locations</a><br><br>
    <a href="/profile/edit">Edit Account Information</a>
  </div>

  <div class="col-sm-8">
    <h3>Starting Locations <a href="#" class="btn btn-default btn-sm">Add</a></h3>
    <p>
      <!-- Name: Location [Edit] -->
      <% for(var i = 0; i < user.start_locations.length; i++) {%>
        <strong><%= user.start_locations[i].name %>: </strong>
        <%= user.start_locations[i].location %>
        <a href="/edit" class="btn btn-default btn-sm">Edit</a><br>
      <% } %>
    </p>

    <h3>Meeting Locations</h3>
    <p>
      <!-- Name: Location -->
      <% for(var i = 0; i < user.meeting_locations.length; i++) {%>
        <strong><%= user.meeting_locations[i].name %>: </strong>
        <%= user.meeting_locations[i].location %><br>
      <% } %>
    </p>
  </div>
</div>
